<div style="display: table; margin: auto; vertical-align: middle;">
  <%= image_tag ('star wars.png'), style: "align: right; vertical-align: top;" %>
  <h2>Sign up</h2>
  <div class="users">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true, label: 'E-mail: ' %>
        <%= f.input :password, required: true, label: 'Password: ', hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true, label: 'Password confirm: ' %>
        <%= f.label 'EsquadrÃ£o' %> <i>(em branco para criar novo):</i>
        <%= f.collection_select(:squad_id, Squad.all, :id, :name, :include_blank => true) %>
      </div>

      <br />

      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
