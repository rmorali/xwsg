<% @planets.each do |planet| %>

  <% pos_x = ( planet.x + @map_x_adjust ) * @map_ratio %>
  <% pos_y = ( planet.y + @map_y_adjust ) * @map_ratio %>
  <% GroupFleet.new(planet).group! %>

  <div id="images" style="position: absolute; left:<%= pos_x %>px; top:<%= pos_y %>px; z-index: 5" >
    <%= image_tag (planet.image), style: "width: 50px" %>
  </div>

  <div id="names" style="position: absolute; left:<%= pos_x + 5 %>px; top:<%= pos_y - 25 %>px" >
    <span style="color: white; font-weight: bold; font-size: 12px">
      <%= planet.name %>
    </span>
  </div>

  <div id="fleets" class="fleets" style="position:absolute; left:<%= pos_x + 50 %>px; top:<%= pos_y + 5 %>px">
    <% planet.fleets.where(destination: nil, carrier: nil).each do |fleet| %>
      <span style="<%= style(fleet) %>">
        <%= link_to show(fleet), edit_fleet_path(fleet), remote: true %>
      </span>
      <% fleet.cargo.each do |cargo| %>
        <br>
        <%= show(cargo) %>
      <% end %>
      <br>
    <% end %>
  </div>

<% end %>
