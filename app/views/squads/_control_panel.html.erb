<table style="text-align: left; border-spacing: 15px 0px">
  <tr>
    <td style="text-align:center">
      <%= image_tag ('squads/star wars.png'), style: "width: 105px; align: center;" %>
    </td>

    <td style="text-align:center">
      <info class="tooltip">
      <tip>Setup do Squad</tip>
        <a href = "" onclick="window.open('/squads/<%= @squad.id %>/edit', 'Setup do Squad', 'toolbar=no, location=no, scrollbars=yes, resizable=no, width=350, height=250')">
        <%= image_tag (@squad.image), style: "width: 50px; align: center;" %></a>
      </info>
    </td>

    <td style="text-align:center">
      <span style="color:<%= @squad.color %>;font-size: 22px; font-weight: bold">
        <%= @squad.name %>
      </span>
      <br>
      <span style="color:<%= @squad.color %>;font-size: 14px; font-weight: bold">
        <%= @squad.faction.name %>
      </span>
    </td>

    <td style="text-align:center">
      <span style="font-size: 16px; font-weight: bold">
        Turno: <%= @round.number %><br>
        <%= @round.phase.upcase_first %>
      </span>
    </td>

    <td style="text-align:center">
      <info class="tooltip">
      <tip>Creditos e Income</tip>
        <%= image_tag ('squads/credits.png'), style: "width: 50px; align: right; vertical-align: top" %>
      </info>
    </td>

    <td>
      <span style="color: yellow; font-size: 13px; font-weight: bold">
        <info class="tooltip">
        <tip>Crédito Disponível</tip>
          <%= @squad_credits %>
        </info>
      </span>
      <br>
      <span style="color: yellow; font-size: 10px">
        <info class="tooltip">
        <tip>Income Previsto</tip>
          +<%= @squad_income %>
        </info>
      </span>
    </td>

    <td style="text-align:center">
      <info class="tooltip">
      <tip>Unidades do XWA</tip>
        <a href = "" onclick="window.open('/units/index', 'Message Board', 'toolbar=no, location=no, scrollbars=yes, resizable=yes, width=500, height=600')">
          <%= image_tag ('squads/units.png'), style: "width: 50px; align: center" %></a>
      </info>
    </td>

    <td style="text-align:center">
      <info class="tooltip">
      <tip>Combates</tip>
      <a href = "" onclick="window.open('/results','Combates', 'toolbar=no, location=no, scrollbars=yes, resizable=yes, width=600, height=800')">
        <%= image_tag ('squads/combats.png'), style: "width: 50px; align: left" %>
      </a>
      </info>
    </td>

    <td valign="center" align="center">
      <info class="tooltip">
      <tip>Finalizar turno</tip>
        <%= link_to (image_tag ('squads/ready.png'), style: "width: 50px; align: center"), squads_ready_path, method: :post, data: {confirm: 'Passar Turno. Tem certeza?'} %>
      </info>
    </td>

    <td style="text-align:center">
      <info class="tooltip">
      <tip>Setup do Sistema</tip>
        <a href = "" onclick="window.open('/setups', 'Setup do Sistema', 'toolbar=no, location=no, scrollbars=yes, resizable=yes, width=400, height=550')">
          <%= image_tag ('squads/setup.png'), style: "width: 40px; align: center" %></a>
      </info>
    </td>

    <td style="text-align:center">
      <info class="tooltip">
      <tip>Logoff</tip>
        <%= link_to (image_tag ('squads/logoff.png'), style: "width: 50px; align: center"), destroy_user_session_path %></a>
      </info>
    </td>

  </tr>
</table>
