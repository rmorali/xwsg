<div class="edit_fleets">
  <table>
    <tr>
      <td>
        <div id="fleet_image">
          <%= image_tag (@fleet.image), style: "width: 100px; border: 1px solid #ddd; border-radius: 4px; padding: 5px" unless @fleet.image.nil? %>
        </div>
      </td>
      <td>
        <div id="fleet_name" style="<%= style(@fleet) %>; font-size: 20px">
          <%= show(@fleet) %>
        </div>
        <div id="planet" style="color: white; font-size: 16px">
          <%= @fleet.planet.name %>
        </div>
        <div id="destination" style="color: white; font-size: 14px">
          <%= "--> #{@fleet.destination.name}" if @fleet.destination %>
        </div>
          <br>
          <div class="form-inputs">
            <% if @fleet.movable? %>
              <%= simple_form_for @fleet, url: url_for(action: 'move') do |f| %>
                <table>
                  <tr>
                    <td><%= f.input :quantity, collection: 0..@fleet.quantity, label: false %></td>
                    <td><%= f.input :destination, collection: @destinations, label: false %></td>
                    <td><%= f.submit 'Mover' %></td>
                  </tr>
                </table>
              <% end %>
            <% end %>
          </div>
        </div>
      </td>
    </tr>
  </table>
</div>

<% if @fleet.builder? %>
  <%= render partial: 'builders' %>
<% end %>

<% if @fleet.loadable? %>
  <%= render partial: 'carriers', object: @fleet  %>
<% end %>
