<div id="fleet_image">
  <%= image_tag (@fleet.image), style: "width: 30%" %>
</div>

<div id="fleet_quantity" style="color: <%= @fleet.squad.color %>; font-weight: bold; font-size: 10px">
  <%= @fleet.quantity %>
</div>

<div class="form-inputs">
  <% if @fleet.movable? %>
    <table>
      <tr>
        <%= simple_form_for @fleet, url: url_for(action: 'move') do |f| %>
          <td><%= f.input :quantity, collection: 0..@fleet.quantity, label: false %></td>
          <td><%= f.input :destination, collection: @destinations, label: false %></td>
          <td><%= f.submit 'Move!' %></td>
        <% end %>
      </tr>
    </table>
  <% end %>
</div>

<br />

<div class="form-inputs">
  <% if @fleet.carriables.count > 0 %>
    <table>
      <tr>
        <% @fleet.carriables.each do |fleet| %>
          <td><%= fleet.name %></td>
          <%= simple_form_for @fleet, url: url_for(action: 'embark') do |f| %>
            <%= simple_fields_for :custom do |c| %>
              <td><%= c.hidden_field :id, value: fleet.id, label: false %></td>
              <td><%= c.input :quantity, collection: 0..fleet.quantity, label: false %></td>
            <% end %>
            <td><%= f.submit 'Embark' %></td>
          <% end %>
        <% end %>
      </tr>
  <% end %>
</div>

<div class="form-inputs">
  <% if @fleet.cargo.count > 0 %>
    <table>
      <tr>
        <% @fleet.cargo.each do |fleet| %>
          <td><%= fleet.name %></td>
          <%= simple_form_for @fleet, url: url_for(action: 'disembark') do |f| %>
            <%= simple_fields_for :custom do |c| %>
              <td><%= c.hidden_field :id, value: fleet.id %></td>
              <td><%= c.input :quantity, collection: 0..fleet.quantity %></td>
            <% end %>
            <td><%= f.submit 'Disembark' %></td>
          <% end %>
        <% end %>
      </tr>
    </table>
  <% end %>
</div>
